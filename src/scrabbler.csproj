    <ItemGroup>
      <PackageReference Include="System.CommandLine" Version="2.0.0-beta3.22114.1" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="words.txt" />
      <EmbeddedResource Include="words.txt" />
    </ItemGroup>

</Project>
